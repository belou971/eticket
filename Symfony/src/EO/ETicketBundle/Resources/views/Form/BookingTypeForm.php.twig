{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

{% form_theme form 'EOETicketBundle:Form:custom_fields_form.html.twig' %}


<di class="step-booking-type" style="display: block">

    <label class="col-sm-12 required">Choisissez une date de réservation</label>
    {{ form_errors(form.dtVisitor) }}
    <div class="col-sm-12">
        {{ form_widget(form.dtVisitor) }}
    </div>

    <label class="col-sm-12 required">Choisissez le type de réservation</label>
    {{ form_errors(form.bookingType) }}
    <div class="col-sm-12">
        {{ form_widget(form.bookingType) }}
    </div>

    <dv class="form-group">
            <label class="col-sm-12 required">Vos coordonnées</label>

        <div class="form-group">
            {{ form_label(form.name, "Nom", {'label_attr':{'class': 'col-sm-1 control-label'}}) }}
            {{ form_errors(form.name) }}
            <div class="col-sm-11">
             {{ form_widget(form.name, {'attr':{'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.surname, 'Prénom', {'label_attr':{'class': 'col-sm-1 control-label'}}) }}
            {{ form_errors(form.surname) }}
            <div class="col-sm-11">
                {{ form_widget(form.surname, {'attr':{'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.email, 'Email', {'label_attr':{'class': 'col-sm-1 control-label'}}) }}
            {{ form_errors(form.email) }}
            <div class="col-sm-11">
                {{ form_widget(form.email, {'attr':{'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.dtBirth, 'Date de naissance', {'label_attr':{'class': 'col-sm-1'}}) }}
            {{ form_errors(form.dtBirth) }}
            <div class="col-sm-10">
                {{ form_widget(form.dtBirth) }}
            </div>
        </div>
    </dv>

    <div class="row">
        <div class="dateinfo purchase-flow-border col-lg-12 text-center" style="display: none">
            <p class="booking-date-info"></p>
            <p class="available-place-info"></p>
        </div>
    </div>

</di>

{{ form_widget(form.save) }}

{{ form_rest(form) }}

{{ form_end(form) }}